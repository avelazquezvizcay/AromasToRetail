<div data-section-id="{{ section.id }}"  data-section-type="testimonial-wrap" class="{% if section.settings.parallax_enable %} parallex {% endif %} tt-testimonial-wrap {% if settings.enable_animation != blank %} bottom-to-top hb-animate-element{% endif %}"  {% if section.settings.parallax_enable %}data-source-url="{{ section.settings.bg_img | img_url: 'master' }}"{% endif %} style="background-color:{{ section.settings.bg_color }}{% if section.settings.use_bg %}background-image: url('{{ section.settings.bg_img | img_url: "master" }}');{% endif %}; {% if section.settings.parallax_enable %} background-position: 50% 65.8718%;{% endif %}">
  <div class="container">
    <div id="beforeafter" class="twentytwenty-container">
      <img Loading="Lazy" width="1030" height="600" src="{{  section.settings.image_befor | img_url: "1030x600" }}" alt="Before-image" />
      <div class="tt-before-images-label">BEFORE</div>
      <img Loading="Lazy" width="1030" height="600" src="{{  section.settings.image_after | img_url: "1030x600" }}" alt="after-image" />
      <div class="tt-after-images-label">AFTER</div>
    </div>
    
    <div class="grid__item testimonials_wrap owl-carousel">
      {% if section.blocks.size > 0 %}  
      {% for block in section.blocks %}  
      <div class="testimonial-block test-{{block.id}}">
        <div class="testimonial-img testi-img-{{ block.id }} col-sm-4">
          <div class="authorimg testimonial-image">
            {% if  block.settings.image_1 != blank %}
            <img Loading="Lazy" height="90" width="90" src="{{  block.settings.image_1 | img_url: "90x90" }}" alt="{{  block.settings.image_1_heading }}" />
            {% endif %} 
          </div>
          <div class="grid__item"> 
            {% if block.settings.author_name != blank %}
            <div class="testimonial-user-title">
              <span>{{ block.settings.author_name }}</span>
            </div>
            <div class="testimonial-user-desc"><span style="color:{{block.settings.author_descolor }}">{{ block.settings.author_designation }}</span></div>
            {% endif %}
          </div>
        </div>
        <div class="testimonial-detail col-sm-8">
          {% if block.settings.text_desc != blank %}
          <div class="testimonial-desc" style="color:{{block.settings.des_color }}">{{ block.settings.text_desc }}</div>
          {% endif %} 
        </div>
        <style>.tt-testimonial-wrap .testimonial-block.test-{{block.id}} .testimonial-user-title{color:{{block.settings.author_color }};}</style>
      </div>
      {% endfor %}         
      {% endif %}   
    </div>
  </div>
</div>
{{ 'twentytwenty.css' | asset_url | stylesheet_tag }} 
{{ 'jquery.twentytwenty.js' | asset_url | script_tag }}   
