<div data-section-id="{{ section.id }}"  data-section-type="product-tab-type-1" class="product-tab-type-1 tab-model-wrap{% if section.settings.type_bg != "rgba(0,0,0,0)" %} has_bg {% endif %}">    
  {%- assign collection = collections[section.settings.collection] -%}
  {%- assign grid_item_width = 'small--one-half medium-up--one-quarter' -%}
  {%- assign image_size = '270x270' -%}
  {%- assign product_limit =  5 -%}  
  <div class="container">   
    <div class="grid__item {% if settings.enable_animation != blank %} bottom-to-top hb-animate-element{% endif %}">        

      {% if section.settings.title_1 != blank %}
      <div class="box-heading tthometab-title section-header text-center">
        {% if section.settings.subtitle_1 != blank %}
        <div class="ttsub-title">{{ section.settings.subtitle_1 }}</div>
        {% endif %}
        {% if section.settings.title_1 != blank %}
        <h2 class="tt-title">{{ section.settings.title_1 }}</h2>
        {% endif %}          
      </div>
      {% endif %}    

      {% if section.blocks.size > 0 %} 
      <div class="TTProduct-Tab">
        {% if section.blocks.size > 1 %}
        <ul id="tab_product_{{ section.id }}" class="nav nav-tabs">            
          {%  assign block_size = 1 %} 
          {% for block in section.blocks %} 
          {% if block.settings.title != blank %}
          <li class="{% if block_size == 1 %}active{% endif %}"><a href="#tabs-{{ block.id }}" data-toggle="tab" aria-expanded="false">{{ block.settings.title }} </a></li>              
          {% endif %}
          {% assign block_size = block_size | plus: 1 %}
          {% endfor %}
        </ul>
        {% endif %}
        <div class="tab-inner tab-content tab-container{% if section.settings.product_rows %} two_rows{% endif %}">   
          <div class="row">
            {%  assign block_size = 1 %}  
            {% for block in section.blocks %}
            {%- assign collection = collections[block.settings.collection] -%}   
            {%  assign cnt = 1 %}  
            {%-  assign foundpro = collection.products.count -%} 
            <div id="tabs-{{ block.id }}" data-col="tabs-{{ block.id }}" class="contents tab-pane fade product_col{{ section.settings.product_col }}{% if block_size == 1 %} in active{% endif %}">
              <div class="{{ block.settings.title | handle }}-{{ block.id }} {{ block.settings.title | handle }}-wrap owl-carousel owl-theme">
                {% for product in collection.products limit: product_limit %}
                {%- assign mod_2 = cnt | modulo:2 -%}
                {% if foundpro >= 8 %}
                {% if section.settings.product_rows %}
                {%  if mod_2 != 0  %}
                <ul>
                  <li class='li_single'>
                    {% endif %}
                    {% endif %}
                    {% endif %}
                    {% render 'product-card-grid', collection: collection, product:product, grid_image_width: image_size %}
                    {% if foundpro >= 8 %}
                    {% if section.settings.product_rows %}
                    {%  if mod_2 == 0  %}
                  </li>
                </ul>
                {% endif %}
                {% endif  %}      					
                {% assign cnt = cnt | plus: 1 %}
                {% endif %}                    
                {% endfor %}
                {% if foundpro >= 8 %}
                {% if section.settings.product_rows %}
                {%  if mod_2 != 0  %}
                </li>
              </ul>
            {% endif %}
            {% endif %}
            {% endif %}                                                            
          </div>
          <div class="{{ block.settings.title | handle }}-nav customNavigation">
            <div class="navigation_wrap">
              <a class="prev fa-prev">{{ 'general.slider.prev' | t }}<span class="mdi mdi-arrow-left"></span></a>
              <a class="next fa-next">{{ 'general.slider.next' | t }}<span class="mdi mdi-arrow-right"></span></a> 
            </div>
          </div>
        </div>         
        <script type="text/javascript">jQuery(document).ready(function(){if(jQuery("body").hasClass('disable_menutoggle')){var tab_carousel_1=$("body.disable_menutoggle .{{ block.settings.title | handle }}-{{ block.id }}");jQuery(tab_carousel_1).owlCarousel({items:{{section.settings.product_col}},autoPlay:!1,stopOnHover:!1,rewind:!0,loop:!1,responsive:{100:{items:1},319:{items:2},700:{items:3},992:{items:3},1200:{items:4},1500:{items:{{section.settings.product_col}}}},nav:!1,dots:!0})}else{var tab_carousel=$("body .{{ block.settings.title | handle }}-{{ block.id }}");jQuery(tab_carousel).owlCarousel({items:{{section.settings.product_col}},autoPlay:!1,stopOnHover:!1,rewind:!0,loop:!1,responsive:{100:{items:1},319:{items:2},700:{items:3},992:{items:3},1200:{items:4},1500:{items:{{section.settings.product_col}}}},nav:!1,dots:!0})}
                                                                         if(jQuery("body.rtl").hasClass('disable_menutoggle')){var tab_carousel2_1=$("body.rtl.disable_menutoggle .{{ block.settings.title | handle }}-{{ block.id }}");jQuery(tab_carousel2_1).owlCarousel({items:{{section.settings.product_col}},autoPlay:!1,stopOnHover:!1,loop:!1,rewind:!0,rtl:!0,responsive:{100:{items:1},319:{items:2},700:{items:3},992:{items:3},1200:{items:4},1500:{items:{{section.settings.product_col}}}},nav:!1,dots:!0})}else{var tab_carousel2=$("body.rtl .{{ block.settings.title | handle }}-{{ block.id }}");jQuery(tab_carousel2).owlCarousel({items:{{section.settings.product_col}},autoPlay:!1,stopOnHover:!1,loop:!1,rewind:!0,rtl:!0,responsive:{100:{items:1},319:{items:2},700:{items:3},992:{items:3},1200:{items:4},1500:{items:{{section.settings.product_col}}}},nav:!1,dots:!0})}
                                                                         jQuery(".{{ block.settings.title | handle }}-nav .next").click(function(){jQuery(".{{ block.settings.title | handle }}-{{ block.id }}").trigger('next.owl')});jQuery(".{{ block.settings.title | handle }}-nav .prev").click(function(){jQuery(".{{ block.settings.title | handle }}-{{ block.id }}").trigger('prev.owl')})});jQuery(window).load(function(){if(jQuery(".{{ block.settings.title | handle }}-wrap").find('.owl-nav').hasClass('disabled')){jQuery(".{{ block.settings.title | handle }}-nav").hide()}else{jQuery(".{{ block.settings.title | handle }}-nav").show()}});jQuery(window).resize(function(){if(jQuery(".{{ block.settings.title | handle }}-wrap").find('.owl-nav').hasClass('disabled')){jQuery(".{{ block.settings.title | handle }}-nav").hide()}else{jQuery(".{{ block.settings.title | handle }}-nav").show()}});</script>
        {% assign block_size = block_size | plus: 1 %}
        {% endfor %}
      </div><!--End tabs container-->
    </div><!--End tabs-->
  </div>                         
  {% endif %}

      {% if section.settings.view_all != blank %}
      <div class="vew_all_btn">
      <a class="btn" href="{{ section.settings.view_url }}" >{{ section.settings.view_all }}</a>
        </div>
      {% endif %}
</div>
</div>
</div>
<style>
  .tthometab-title .ttsub-title {
    color:{{ section.settings.subtitle_1_clr }};
  }
  .tthometab-title .tt-title {
    color:{{ section.settings.title_1_clr }};
  }
  .TTProduct-Tab .nav-tabs > li > a {
    background:{{ section.settings.button_bg }};
    color:{{ section.settings.button_text }};
  }
  .TTProduct-Tab .nav-tabs > li > a::after {
    background:{{ section.settings.button_hover_bg }};
  }
  .TTProduct-Tab .nav-tabs > li.active > a,
  .TTProduct-Tab .nav-tabs > li > a:focus {
    background:{{ section.settings.button_hover_bg }};
    color:{{ section.settings.button_hover_text }};	
    border-color: {{ section.settings.button_hover_bg }};
  }
  .TTProduct-Tab .nav-tabs > li > a:hover {
    color:{{ section.settings.button_hover_text }};
  }
</style>
