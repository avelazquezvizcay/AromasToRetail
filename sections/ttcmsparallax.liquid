      {
        "type": "color",
        "id": "btn_hover_bg_color",
        "label": "Button Hover background Color",
        "default": "#000000"
      }
    ],
    "presets": [
      {
        "name": "TTParallax section",
        "category": "TT CMS section"
      }
    ]
  }
{% endschema %}
