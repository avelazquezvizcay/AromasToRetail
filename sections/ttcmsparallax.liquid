<div class="ttcmsparallax bottom-to-top hb-animate-element" data-section-id="{{ section.id }}" >
  <div class="parallex" data-source-url="{{ section.settings.image | img_url: 'master' }}" style="background-color:{{section.settings.bg_color}};background-image:url('{{ section.settings.image | img_url: 'master' }}'); background-position: 50% 65.8718%;">
      <div class="container">
          <div class="parallax-detail col-sm-5 col-xs-5">
              {% if section.settings.subtitle != blank %}
            	<div class="subtitle">{{ section.settings.subtitle }}</div>
              {% endif %}
              {% if section.settings.title != blank %}
            	<div class="title">{{ section.settings.title }}</div>
              {% endif %}
              {% if section.settings.parallax_desc != blank %}
            	<div class="description">{{ section.settings.parallax_desc }}</div>
              {% endif %}
              {% if section.settings.btn_link != blank %}
            	<div class="parallax-button">
                  <a class="parallaxbtn btn" href="{% if section.settings.btn_link != blank %}{{ section.settings.btn_link }}{% else %}#{% endif %}">{{ section.settings.btn_txt }}</a>
            	</div>
              {% endif %}
          </div>
      </div>
  </div>
</div>
{{ 'parallax.min.js' | asset_url | script_tag }}
<style>.parallex .parallax-detail .title{color: {{ section.settings.title_color }};}.parallex .parallax-detail .subtitle{color: {{ section.settings.subtitle_color }};}.parallex .parallax-detail .description{color: {{ section.settings.desc_color }};}.parallex .parallax-detail .parallax-button a{background: {{ section.settings.btn_bg_color }};color: {{ section.settings.btn_txt_color }};}.parallex .parallax-detail .parallax-button a:hover{color: {{ section.settings.btn_hover_txt_color }};}.parallex .parallax-detail .parallax-button a:hover::after{background: {{ section.settings.btn_hover_bg_color }};}</style>
{% schema %}
