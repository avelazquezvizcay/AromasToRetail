<div class="home-slider">
  <div
    class="homeslider type_{{ section.settings.slider_animation_type }}"
    id="homeslider--{{ section.id }}"
    data-section-id="{{ section.id }}"
    data-section-type="slideshow-section"
    data-animation-type="{{ section.settings.slider_animation_type }}"
  >
    <ul class="slides">
      {% for block in section.blocks %}
        {% if block.settings.image == blank %}
          <li id="slide--{{ block.id }}" class="slide" data-thumb="slide1-thumb.jpg">
         

      
              <div id="popup_toggle">             
                <video width="100%" height="auto " autoplay> 
                         <source  src="https://cdn.shopify.com/videos/c/o/v/9338d9dae68f43d7b9fc159718324c81.mp4" >
                                  
                  <div class="slider-content-wrap content-{{ block.settings.text_position }} effect_{{ block.settings.text_effect }}">
                    {% if block.settings.sub_title != blank %}
                      <div class="slider-subtitle" style="color:{{block.settings.subtitle_color }}">
                        {{ block.settings.sub_title }}
                      </div>
                    {% endif %}
                    {% if block.settings.title != blank %}
                      <div class="slider-title" style="color:{{block.settings.title_color }}">
                        {{ block.settings.title }}
                      </div>
                    {% endif %}
                    {% if block.settings.btn_txt != blank %}
                      <div class="slider-button">
                        <a
                          href="{{block.settings.btn_link }}"
                          class="btn"
                          style="background-color:{{block.settings.btn_bg_color}};color:{{block.settings.btn_txt_color}}"
                        >
                          {{- block.settings.btn_txt -}}
                        </a>
                      </div>
                    {% endif %}
                  </div>                  
                 </video> 
              </div>
       
           

            {% if block.settings.show_video == false %}
              <div class="slider-content-wrap content-{{ block.settings.text_position }} effect_{{ block.settings.text_effect }}">
                {% if block.settings.sub_title != blank %}
                  <div class="slider-subtitle" style="color:{{block.settings.subtitle_color }}">
                    {{ block.settings.sub_title }}
                  </div>
                {% endif %}
                {% if block.settings.title != blank %}
                  <div class="slider-title" style="color:{{block.settings.title_color }}">
                    {{ block.settings.title }}
                  </div>
                {% endif %}
                {% if block.settings.btn_txt != blank %}
                  <div class="slider-button">
                    <a
                      href="{{block.settings.btn_link }}"
                      class="btn"
                      style="background-color:{{block.settings.btn_bg_color}};color:{{block.settings.btn_txt_color}}"
                    >
                      {{- block.settings.btn_txt -}}
                    </a>
                  </div>
                {% endif %}
              </div>
            {% endif %}

            {% if block.settings.btn_txt != blank %}
              <style>
                #slide--{{ block.id }} .slider-button > a::after{background-color:{{ block.settings.btn_bghover_color }} !important;color:{{ block.settings.btn_hovertxt_color }} !important;}#slide--{{ block.id }} .slider-button > a:hover{color:{{ block.settings.btn_hovertxt_color }} !important;}
              </style>
            {% endif %}
          </li>
    
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</div>

<style>
  .homeslider .slides .slick-arrow{background:{{ section.settings.slide_button_bg_color}};color:{{ section.settings.slide_button_txt_color}};}.homeslider .slides .slick-arrow:hover{background:{{ section.settings.slide_button_bg_hover_color}};color:{{ section.settings.slide_button_txt_hover_color}};}@media(max-width:480px){.homeslider .slides .slick-arrow:hover{color:{{ section.settings.slide_button_txt_color}};}}
</style>

{% stylesheet %}
{% endstylesheet %}
