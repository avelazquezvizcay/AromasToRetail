{
"name": "TTOffer section",
"class": "index-section ttcmsoffer",
"settings": [
{
"type": "color",
"id": "bg_color",
"label": "Background Color",
"default": "#111"
}
],
"blocks": [
{
"type": "text",
"name": "content",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "url",
"id": "image_url",
"label": "Image Url"
},
{
"type": "text",
"id": "title",
"label": "Title"
},
{
"type": "color",
"id": "title_color",
"label": "Title Color",
"default": "#fff"
},
{
"type": "text",
"id": "subtitle",
"label": "Sub Title"
},
{
"type": "color",
"id": "subtitle_color",
"label": "SubTitle Color",
"default": "#fff"
},
{
"type": "textarea",
"id": "about_desc",
"label": "Description"
},
{
"type": "color",
"id": "desc_color",
"label": "Description Color",
"default": "#fff"
},
{
"type": "text",
"id": "about_btn",
"label": "Button Text"
},
{
"type": "color",
"id": "btn_txt_color",
"label": "Button Text Color",
"default": "#fff"
},
{
"type": "color",
"id": "btn_bg_color",
"label": "Button Background Color",
"default": "#fff"
},
{
"type": "color",
"id": "btn_txt_hvr_color",
"label": "Button Text Hover Color",
"default": "#fff"
},
{
"type": "color",
"id": "btn_bg_hvr_color",
"label": "Button Background Hover Color",
"default": "#fff"
