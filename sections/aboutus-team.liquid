<div data-section-id="{{ section.id }}"   data-section-type="aboutus-wrap" class="aboutus-wrap ourteam_wrap">
  <div class="row">
    {% if section.settings.title != blank  %}
    <div class="section-header">
      
      {% if section.settings.sub_title != blank %}
      <div class="ttsub-title" style="color:{{ section.settings.sub_title_color }}"> {{ section.settings.sub_title }}  </div>
      {% endif %}
      {% if section.settings.title != blank %}
      <h2 class="tt-title" style="color:{{ section.settings.title_color }}">{{ section.settings.title }}</h2>  
      {% endif %}
    </div>
    {% endif %}
    <div class="our_team">
      {% if section.blocks.size > 0 %} 
      <ul class="ourteam_slider owl-theme owl-carousel" data-column="{{ section.settings.ourteam_column }}"> 
        {% for block in section.blocks %}
        <li class="teammember-item">
          <div class="teammember-content">
            <div class="ourteam-image-wrap">
              <div class="ourteam-image">
                <img Loading="Lazy"  src="{{  block.settings.image_1 | img_url: "master" }}" alt="{{  block.settings.image_heading }}" />
              </div>
                  <ul class="teammember-social-profile"> 
                    <li class="facebook">
                      <a href="{% if block.settings.facebook  %} {{ block.settings.facebook }} {% else %}#{% endif %}"> 
                        <i class="mdi mdi-facebook"></i> 
                      </a> 
                    </li>
                    <li class="twitter">
                      <a href="{% if block.settings.twitter %} {{ block.settings.twitter }} {% else %}#{% endif %}">
                        <i class="mdi mdi-twitter">
                           <svg class="icon icon-twitter" viewBox="0 0 20 20" style="width: 15px;height: auto;margin-top: 7px;align-items: center;justify-content: center;display: inline-block;">
    <path fill="currentColor" fill-rule="evenodd" d="M7.273 2.8 10.8 7.822 15.218 2.8h1.768l-5.4 6.139 5.799 8.254h-4.658l-3.73-5.31-4.671 5.31H2.558l5.654-6.427L2.615 2.8zm6.242 13.125L5.07 4.109h1.405l8.446 11.816z" clip-rule="evenodd"></path>
</svg>
                        </i> 
                      </a> 
                    </li>
                    <li class="googleplus"> 
                      <a href="{% if block.settings.google-plus %} {{ block.settings.google-plus }} {% else %}#{% endif %}"> 
                        <i class="mdi mdi-google-plus"></i> 
                      </a> 
                    </li>
                    <li class="instagram"> 
                      <a href="{% if block.settings.instagram  %} {{ block.settings.instagram }} {% else %}#{% endif %}"> 
                        <i class="mdi mdi-instagram"></i> 
                      </a> 
                    </li>
                  </ul>
            </div>
            <div class="teammember-meta">
              <div class="teammember-inner">
                <div class="teammember-meta-inner">
                  {% if block.settings.author_name != blank %}
                  <div class="teammember-title">{{ block.settings.author_name }}</div>
                  {% endif %}
                  {% if block.settings.author_designation != blank %}
                  <p class="teammember-position">{{ block.settings.author_designation }}</p>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </li>
        {% endfor %}
      </ul>
      <div class="customNavigation"><div class="navigation_wrap"><a class="chevron-left prev ourteam_prev">{{ 'general.slider.prev' | t }}<span class="mdi mdi-arrow-left"></span></a><a class="chevron-right next ourteam_next">{{ 'general.slider.next' | t }}<span class="mdi mdi-arrow-right"></span></a></div></div>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
{
"name": "Our Team",
"settings": [

          {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "About Us"
          },
          {
          "type": "text",
          "id": "sub_title",
          "label": "Sub Heading"
          },
		{
          "type": "color",
          "id": "title_color",
          "label": "Heading color"
          },
		{
          "type": "color",
          "id": "sub_title_color",
          "label": "Sub Heading color"
          },
			{
            "type": "select",
            "id": "ourteam_column",
            "label": "Select Our Team Column",
            "default": "4",
            "options": [
				{
                "value": "2",
                "label": "2 Column"
              },
              {
                "value": "3",
                "label": "3 Column"
              },
              {
                "value": "4",
                "label": "4 Column"
              },
			{
                "value": "5",
                "label": "5 Column"
              }
            ]
          }

          ],
          "blocks": [
          {
          "type": "text",
          "name": "Our Team",
          "settings": [
          {
          "type": "image_picker",
          "id": "image_1",
          "label": "Image",
          "info": "Size: 140x140"
          },
          {
          "type": "text",
          "id": "image_heading",
          "label": "Image heading"
          },
          {
          "type": "text",
          "id": "author_name",
          "label": "author name"
          },
          {
          "type": "text",
          "id": "author_designation",
          "label": "Designation"
          },
			{
          "type": "text",
          "id": "facebook",
          "label": "Facebook Link"
          },
		 {
          "type": "text",
          "id": "twitter",
          "label": "Twitter Link"
          },
		  {
          "type": "text",
          "id": "google-plus",
          "label": "Google+ Link"
          },
		  {
          "type": "text",
          "id": "instagram",
          "label": "Instagram Link"
          }
          ]
          }
          ],
 "presets": [
    {
     "name": "Our Team",
      "category": "TemplateTrip",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "text"
        }       
 		
      ]
    }
  ]
}
{% endschema %}
<script>$(document).ready(function(){var col_n=$('.ourteam_slider').data('column');
$('body:not(.rtl) .ourteam_wrap .ourteam_slider').owlCarousel({items:{{section.settings.ourteam_column}},nav:!1,dots:!0,loop:!1,responsive:{100:{items:1},319:{items:2},768:{items:3},992:{items:3},1200:{items:{{section.settings.ourteam_column}}}}});$('body.rtl .ourteam_wrap .ourteam_slider').owlCarousel({items:{{section.settings.ourteam_column}},nav:!1,rtl:!0,loop:!1,dots:!0,responsive:{100:{items:1},319:{items:2},768:{items:3},992:{items:3},1200:{items:{{section.settings.ourteam_column}}}}});jQuery(".our_team .customNavigation .next").click(function(){jQuery('.our_team .ourteam_slider').trigger('next.owl')});jQuery(".our_team .customNavigation .prev").click(function(){jQuery('.our_team .ourteam_slider').trigger('prev.owl')})
if($(".ourteam_slider .owl-nav").hasClass('disabled')){jQuery(".our_team .customNavigation").hide()}else{jQuery(".our_team .customNavigation").show()}});

</script>