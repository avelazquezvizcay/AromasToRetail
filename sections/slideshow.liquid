{% schema %}
  {
    "name": "Slideshow",
    "class": "index-section tt-homeslider",
    "settings": [
        {
          "type": "select",
          "id": "slider_animation_type",
          "label": "Transition effect",
          "options": [
            {
              "value": "slide",
              "label": "Slide"
            },
            {
              "value": "fade",
              "label": "Fade"
            }
          ]
        },
        {
          "type": "color",
          "id": "slide_button_bg_color",
          "label": "Button Background Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "slide_button_bg_hover_color",
          "label": "Button Background Hover Color",
          "default": "#ffc446"
        },
        {
          "type": "color",
          "id": "slide_button_txt_color",
          "label": "Button Text Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "slide_button_txt_hover_color",
          "label": "Button Text Hover Color",
          "default": "#000000"
        }
    ],
    "blocks" : [
       {
          "type": "image",
          "name": "Slide",
          "settings": [
              {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
              },
              {
                "type": "url",
                "id": "image_url",
                "label": "Image link"
              },
              {
                "type": "checkbox",
                "id": "show_video",
                "label": "Show video",
                "default":false
              },
              {
                "type": "video_url",
                "id": "video_url",
                "label": "YouTube link",
                "accept": ["youtube", "vimeo"]
              },
 			  {
                "type": "textarea",
                "id": "title",
                "label": "Title",
                "default": "Minimal Work Portfolio"
              },
              {
                "type": "textarea",
                "id": "sub_title",
                "label": "Sub Title",
                "default": "New Decoration Furniture Home, Office"
              },
              {
                "type": "text",
                "id": "btn_txt",
                "label": "button text",
                "default": "shop now"
              },
              {
                "type": "url",
                "id": "btn_link",
                "label": "button link"
              },
              {
                "type": "color",
                "id": "title_color",
                "label": "Title Color",
                "default":"#fff"
              },
              {
                "type": "color",
                "id": "subtitle_color",
                "label": "Subtitle Color",
                "default":"#fff"
              },
              {
                "type": "color",
                "id": "btn_bg_color",
                "label": "button background Color",
                "default":"#EB3039"
              },
			  {
                "type": "color",
                "id": "btn_txt_color",
                "label": "Button text Color",
                "default":"#fff"
              },
              {
                "type": "color",
                "id": "btn_bghover_color",
                "label": "button hover background Color",
                "default":"#000"
              },
			  {
                "type": "color",
                "id": "btn_hovertxt_color",
                "label": "Button hover text Color",
                "default":"#fff"
              },
              {
                "type": "select",
                "id": "text_position",
                "label": "Text Position",
                "options": [
                  {
                    "value": "left",
                    "label": "left"
                  },
                  {
                    "value": "right",
                    "label": "Right"
                  },
                  {
                    "value": "center",
                    "label": "Center"
                  }
                ]
              },
              {
                "type": "select",
                "id": "text_effect",
                "label": "Text Effect",
                "options": [
                  {
                    "value": "left",
                    "label": "left"
                  },
                  {
                    "value": "right",
                    "label": "Right"
                  },
                  {
                    "value": "top",
                    "label": "Top"
                  },
                  {
                    "value": "bottom",
                    "label": "Bottom"
                  }
                ]
              }             
          ]
        }
    ],
    "presets": [
      {
        "name": "Slideshow",
        "category": "Image",
        "settings": {
          "slider_animation_type": "slide"
          },
          "blocks": [
          {
          	"type": "image"
          },
          {
          	"type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}